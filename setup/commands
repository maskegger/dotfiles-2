# Services
sudo systemctl enable touchegg sddm bluetooth NetworkManager wpa_supplicant libvirtd

systemctl enable --user syncthing

# Directories
mkdir ~/Pictures/Screenshots

# Time
timedatectl set-timezone Asia/Dubai

# Groups
sudo groupadd uinput
sudo usermod -aG input matei
sudo usermod -aG uinput matei
sudo usermod -aG libvirt matei
sudo usermod -aG wheel matei

# Cache git credentials
git config --global credential.helper store
