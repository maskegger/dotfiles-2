# Mod key
set $mod Mod4

# Wallpaper
exec nitrogen --set-scaled ~/backgrounds/Open\ Sourcerer.png &

# Compositor
exec picom &

# Notifications
exec dunst &

# Music
exec mpd &

# Greeting
exec_always notify-send "Config loaded" &

# Gaps
exec_always i3-msg gaps inner all set 10
exec_always i3-msg gaps outer all set 5

# Create terminal
bindsym $mod+Return exec kitty

# Reload config
bindsym $mod+Escape exec i3-msg -t command restart
