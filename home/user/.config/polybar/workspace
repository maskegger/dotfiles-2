[module/workspace]
type = custom/script
interval = 0.05
exec = echo "Workspace: `xprop -root -notype _NET_CURRENT_DESKTOP | perl -pe 's/.*?= (\d+)/$1/'`"
click-left = bspc desktop --focus next
click-right = bspc desktop --focus prev
offset-x = 50%
