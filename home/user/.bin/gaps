gap=$(bspc config window_gap) # Get gap of windows

if [ $gap = 0 ] # If gap is 0
then

    bspc config window_gap 20 # Set gap to 20
    dunstify "Gaps changed to 20" -i /usr/share/icons/Papirus/16x16/places/desktop.svg # Show notification

fi

if [ $gap = 20 ] # If gap is 20
then

    bspc config window_gap 100 # Set gap to 100
    dunstify "Gaps changed to 100" -i /usr/share/icons/Papirus/16x16/places/desktop.svg # Show notification

fi

if [ $gap = 100 ] # If gap is 100
then

    bspc config window_gap 0 # Set gap to 0
    dunstify "Gaps changed to 0" -i /usr/share/icons/Papirus/16x16/places/desktop.svg # Show notification

fi
