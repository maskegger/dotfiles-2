# Mod key
mod="Mod4"

# Tiling
riverctl spawn rivertile
riverctl output-layout rivertile

# Opacity
riverctl opacity 1.0 1.0 0.0 0.1 30

# Border
riverctl border-color-focused '#6A6A6A'
riverctl border-color-unfocused '#181E23'
riverctl border-width 3

# Wallpaper
riverctl spawn 'swaybg -c "#384149"'

# Terminal
riverctl map normal $mod Return spawn 'alacritty'

# Emacs
riverctl map normal $mod+Shift E spawn 'emacsclient -c'

# Launcher
riverctl map normal $mod Space spawn 'rofi -show drun'

# Close window
riverctl map normal $mod+Shift Q close

# Toggle floating
riverctl map normal $mod+Mod1 Space toggle-float

# Toggle fullscreen
riverctl map normal $mod F toggle-fullscreen

# Focus next and prev
riverctl map normal $mod J focus-view next
riverctl map normal $mod K focus-view previous

# Swap next and prev
riverctl map normal $mod+Shift J swap next
riverctl map normal $mod+Shift K swap previous

# Floating apps
riverctl float-filter-add "Rofi"
